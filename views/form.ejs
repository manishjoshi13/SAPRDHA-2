        <form id="sportsForm" action="/form" method="POST" class="registration-form">
            <div class="form-section">
                <h3 class="section-title">Personal Information</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">
                            Full Name <span class="required">*</span>
                        </label>
                        <input type="text" id="name" name="name" required placeholder="Enter your full name">
                    </div>

                    <div class="form-group">
                        <label for="email">
                            Email <span class="required">*</span>
                        </label>
                        <input type="email" id="email" name="email" required placeholder="Enter your email address">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="course">
                            Course <span class="required">*</span>
                        </label>
                        <input type="text" id="course" name="course" required placeholder="e.g., B.Tech, B.Sc, etc.">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="year">
                            Year <span class="required">*</span>
                        </label>
                        <select id="year" name="year" required>
                            <option value="">Select Year</option>
                            <option value="1">1st Year</option>
                            <option value="2">2nd Year</option>
                            <option value="3">3rd Year</option>
                            <option value="4">4th Year</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>
                            Gender <span class="required">*</span>
                        </label>
                        <div class="radio-group">
                            <label class="radio-label">
                                <input type="radio" name="gender" value="boy" required>
                                <span class="radio-custom">Boy</span>
                            </label>
                            <label class="radio-label">
                                <input type="radio" name="gender" value="girl" required>
                                <span class="radio-custom">Girl</span>
                            </label>
                        </div>
